<h2> 商品清单 </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th>quantity</th>
      <th width="200"> Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.mini.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/100x100&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= product.quantity %>
        </td>
        <td>
          <%= link_to("编辑", edit_admin_product_path(product), class: "btn btn-sm btn-danger") %>
          |
          <%= link_to("向上", move_up_admin_product_path(product), method: :patch, class: "btn btn-sm btn-info") %>
          |
          <%= link_to("向下", move_down_admin_product_path(product), method: :patch, class: "btn btn-sm btn-info") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
